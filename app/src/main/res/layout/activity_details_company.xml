<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DetailsCompanyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/backUpload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_small"
                android:backgroundTint="@color/cardBackground"
                android:src="@drawable/icons8_back"
                app:tint="@color/primary" />

            <ImageView
                android:id="@+id/companyImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_profile_pic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:padding="8dp">

                <EditText
                    android:id="@+id/titleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit title"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="100dp"/>

                <EditText
                    android:id="@+id/companynameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit company name"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="160dp"/>

                <EditText
                    android:id="@+id/locationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit location"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="220dp"/>


                <EditText
                    android:id="@+id/durationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter duration"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="280dp"/>

                <EditText
                    android:id="@+id/requirementsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edir requirements"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="340dp"/>

                <EditText
                    android:id="@+id/benefitsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit benifits"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20dp"
                    android:width="300dp"
                    android:layout_marginTop="480dp"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="720dp">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shortDescription"
                    android:text="EDIT &amp; Save"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shortDescription"
                    android:text="DELITE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>