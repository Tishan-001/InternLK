<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/cardViewStyle"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_row_new"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_row_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            android:text="Product Manager Intern"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_row_new"
            app:layout_constraintTop_toTopOf="@id/image_row_new" />

        <TextView
            android:id="@+id/company_row_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Slack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_row_new"
            app:layout_constraintTop_toBottomOf="@id/title_row_new" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/locationIcon"
            android:layout_marginStart="8dp"
            android:src="@drawable/icons8_marker"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@id/image_row_new"
            app:layout_constraintTop_toBottomOf="@id/company_row_new"
            app:tint="@color/green" />
        <TextView
            android:id="@+id/location_row_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="Silicon Valley"
            app:layout_constraintBottom_toBottomOf="@id/locationIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/locationIcon"
            app:layout_constraintTop_toTopOf="@id/locationIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>